<div class="container add-margin-top">
<% if current_user.try(:admin?) %>
<div class="form map-form">
  <%= form_tag("/hospitals", method: "POST", class: "form") do %>

  <%= label_tag("hospital[name]", "Hospital Name: ") %>
  <%= text_field_tag("hospital[name]") %>
  <br />
  <%= label_tag("hospital[lat]", "Latitude: ") %>
  <%= text_field_tag("hospital[lat]") %>

  <%= label_tag("hospital[lon]", "Longitude: ") %>
  <%= text_field_tag("hospital[lon]") %>
  <br />  <br />
  <%= label_tag(nil, "Features: ") %>
  <br />
  <%= render "features_check_boxes", features: @features %>
  <br />  <br />
  <%= label_tag("hospital[description]", "Description:") %>
  <br />
  <%= text_area_tag("hospital[description]", nil, size: "60x8") %>
  <br />

  <%= submit_tag("Create Hospital", class: "btn btn-primary") %>
  <% end %>
</div>

<% else %>
<h3>Must be admin to view this page</h3>
<%= link_to "Return Home", current_user, class: "btn btn-link" %>
<% end %>
</div>