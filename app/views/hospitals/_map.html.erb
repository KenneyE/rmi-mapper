<div id="map-canvas"></div>


<style type="text/css">
html, body, #map-canvas { height: 800px; margin: 0px; padding: 0;}
</style>
<script type="text/javascript"
src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["google_maps_api_key"] %>">
</script>

<script type="text/javascript">
function initialize() {
  var latLng;
  var mapOptions = {
    center: { lat: <%= @location.lat %>, lng: <%= @location.lon %>},
    zoom: 6
  };

  var map = new google.maps.Map(document.getElementById('map-canvas'),
  mapOptions);

  latLong = new google.maps.LatLng(<%= @location.lat %>, <%=  @location.lon  %>);
  new google.maps.Marker({
    position: latLng,
    map: map,
    title: "<%= @location.name %>"
  });

  <% @hospitals.each do | hospital | %>
  latLng = new google.maps.LatLng(<%= hospital.lat %>, <%= hospital.lon %>);
  marker = new google.maps.Marker({
    position: latLng,
    map: map,
    title: "<%= hospital.name %>",
    icon: "/assets/Red_Cross.png"
  });

var contentString = '<div id="content">'+
    '<div id="siteNotice">'+
    '</div>'+
    '<h5 id="firstHeading" class="firstHeading"><%= hospital.name %></h5>'+
    '<div id="bodyContent">'+
    '<p><%= hospital.description || "No descripion provided" %></p>'+
    '</div>'+
    '</div>';

    var infowindow = new google.maps.InfoWindow({
        content: contentString
    });

    google.maps.event.addListener(marker, 'click', function() {
      infowindow.open(map,marker);
    });
  <% end %>
}
google.maps.event.addDomListener(window, 'load', initialize);
</script>